{
    "id": "set_channels",
    "title": {
      "en": "Set channels to"
    },
    "titleFormatted": {
      "en": "Set channels to #[[red_channel]][[green_channel]][[blue_channel]][[white_channel]]"
    },
    "args": [
      {
        "name": "my_device",
        "type": "device",
        "filter": "driver_id=wLightBox"
      },
      {
        "name": "red_channel",
        "type": "number",
        "min":  0,
        "max":  1,
        "step": 0.01,
        "placeholder": "Red channel"
      },
      {
        "name": "green_channel",
        "type": "number",
        "min":  0,
        "max":  1,
        "step": 0.01,
        "placeholder": "Green channel"
      },
      {
        "name": "blue_channel",
        "type": "number",
        "min":  0,
        "max":  1,
        "step": 0.01,
        "placeholder": "Blue channel"
      },          
      {
        "name": "white_channel",
        "type": "number",
        "min":  0,
        "max":  1,
        "step": 0.01,
        "placeholder": "White channel"
      }
    ]
  }