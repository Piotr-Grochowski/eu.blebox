{
  "name": {
    "en": "thermoBox (high temp.)"
  },
  "class": "thermostat",
  "capabilities": [
    "target_hightemperature",
    "measure_temperature",
    "thermostat_state",
    "measure_temperature.safety",
    "measure_temperature.target",
    "measure_power"
  ],
  "capabilitiesOptions": {
    "measure_temperature.safety": {"title": {"en": "Safety temperature"}},
    "measure_temperature.target": {"title": {"en": "Target temperature"}},
    "measure_power": { "approximated": true}
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png"
  },
  "discovery": "bbxsrv",
  "pair": [
    {
      "id": "list_thermoboxes",
      "template": "list_devices",
      "navigation": { "next": "add_thermoboxes"}
    },
    {
      "id": "add_thermoboxes",
      "template": "add_devices"    
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
          "en": "General settings"
      },
      "children":
      [
        {
          "id": "address",
          "type": "text",
          "label": {
            "en": "IP Address"
          }
        },
        {
          "id": "poll_interval",
          "type": "number",
          "label": {
            "en": "Poll interval [ms]"
          },
          "attr": {
            "min": 500,
            "max": 60000
          }
        }
      ]
    },
    {
      "type": "group",
      "label": {
          "en": "Device properties"
      },
      "children":
      [
        {
          "id": "product",
          "type": "label",
          "label": {
            "en": "Product name"
          }
        },
        {
          "id": "apiLevel",
          "type": "label",
          "label": {
            "en": "API Level"
          }
        },
        {
          "id": "hv",
          "type": "label",
          "label": {
            "en": "Hardware version"
          }
        },
        {
          "id": "fv",
          "type": "label",
          "label": {
            "en": "Firmware version"
          }
        }
      ]
    },
    {
      "type": "group",
      "label": {
          "en": "Energy usage"
      },
      "children":
      [
        {
          "id": "power_idle",
          "type": "number",
          "label": {
            "en": "Power usage when IDLE [Watts]"
          },
          "value": 1
        },
        {
          "id": "power_on",
          "type": "number",
          "label": {
            "en": "Power usage when ON [Watts]"
          },
          "value": 1
        },
        {
          "id": "power_boost",
          "type": "number",
          "label": {
            "en": "Power usage when BOOST [Watts]"
          },
          "value": 1
        }
      ]
    }
  ]
}