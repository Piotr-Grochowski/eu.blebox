{
  "name": {
    "en": "thermoBox"
  },
  "class": "thermostat",
  "capabilities": [
    "target_temperature",
    "measure_temperature",
    "thermostat_state",
    "measure_temperature.safety",
    "measure_power"
  ],
  "capabilitiesOptions": {
    "target_temperature": {
      "min": -55,
      "max": 125
    },
    "measure_temperature.safety": {
      "title": {
        "en": "Safety temperature"
      }
    },
    "measure_power": {
      "approximated": true
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png"
  },
  "energy": {
    "approximation": {
      "usageOn": 1,
      "usageOff": 1
    }
  },
  "pair": [
    {
      "id": "add_blebox_device",
      "navigation": {
        "next": "list_blebox_devices"
      }
    },
    {
      "id": "list_blebox_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices",
        "prev": "add_blebox_device"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ]
}
