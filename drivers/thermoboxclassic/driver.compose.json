{
  "name": {
    "en": "thermoBox"
  },
  "class": "thermostat",
  "capabilities": [
    "target_temperature",
    "measure_temperature",
    "thermostat_state",
    "measure_temperature.safety"
  ],
  "capabilitiesOptions": {
    "measure_temperature.safety": {"title": {"en": "Safety temperature"}} 
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png"
  },
  "energy": {
    "approximation": {
      "usageOn": 1, 
      "usageOff": 1 
    }
  },
  "discovery": "bbxsrv",
  "pair": [
    {
      "id": "list_thermoboxes",
      "template": "list_devices",
      "navigation": { "next": "add_thermoboxes"}
    },
    {
      "id": "add_thermoboxes",
      "template": "add_devices"    
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
          "en": "General settings"
      },
      "children":
      [
        {
          "id": "address",
          "type": "text",
          "label": {
            "en": "IP Address"
          }
        },
        {
          "id": "poll_interval",
          "type": "number",
          "label": {
            "en": "Poll interval [ms]"
          },
          "attr": {
            "min": 500,
            "max": 60000
          }
        }
      ]
    },
    {
      "type": "group",
      "label": {
          "en": "Device properties"
      },
      "children":
      [
        {
          "id": "product",
          "type": "label",
          "label": {
            "en": "Product name"
          }
        },
        {
          "id": "apiLevel",
          "type": "label",
          "label": {
            "en": "API Level"
          }
        },
        {
          "id": "hv",
          "type": "label",
          "label": {
            "en": "Hardware version"
          }
        },
        {
          "id": "fv",
          "type": "label",
          "label": {
            "en": "Firmware version"
          }
        }
      ]
    }
  ]
}