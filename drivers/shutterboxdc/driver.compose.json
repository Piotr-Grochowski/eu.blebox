{
  "name": {
    "en": "shutterBoxDC"
  },
  "class": "blinds",
  "capabilities": [
    "windowcoverings_closed",
    "windowcoverings_set",
    "windowcoverings_state",
    "windowcoverings_tilt_set",
    "favorite_position_button"
  ],
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png"
  },
  "pair": [
    {
      "id": "add_blebox_device",
      "navigation": {
        "next": "list_blebox_devices"
      }
    },
    {
      "id": "list_blebox_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices",
        "prev": "add_blebox_device"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "energy": {
    "approximation": {
      "usageConstant": 1
    }
  }
}
