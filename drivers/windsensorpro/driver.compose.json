{
  "name": {
    "en": "windSensor PRO"
  },
  "class": "sensor",
  "capabilities": [
    "measure_wind_strength",
    "measure_wind_strength.avg",
    "measure_gust_strength"
  ],
  "capabilitiesOptions": {
    "measure_wind_strength.avg": {
      "title": {
        "en": "Average wind strength"
      }
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png"
  },
  "energy": {
    "approximation": {
