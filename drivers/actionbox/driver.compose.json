{
  "name": {
    "en": "actionBox"
  },
  "class": "other",
  "capabilities": [],
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "pair": [
    {
      "id": "list_actionboxes",
      "template": "list_devices",
      "navigation": { "next": "add_actionboxes"}
    },
    {
      "id": "add_actionboxes",
      "template": "add_devices"    
    }
  ],
  "discovery": "bbxsrv",
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "settings": [
    {
      "type": "group",
      "label": {
          "en": "General settings"
      },
      "children":
      [
        {
          "id": "address",
          "type": "text",
          "label": {
            "en": "IP Address"
          }
        },
        {
          "id": "poll_interval",
          "type": "number",
          "label": {
            "en": "Poll interval [ms]"
          },
          "attr": {
            "min": 500,
            "max": 60000
          }
        }
      ]
    },
    {
      "type": "group",
      "label": {
          "en": "Device properties"
      },
      "children":
      [
        {
          "id": "product",
          "type": "label",
          "label": {
            "en": "Product name"
          }
        },
        {
          "id": "apiLevel",
          "type": "label",
          "label": {
            "en": "API Level"
          }
        },
        {
          "id": "hv",
          "type": "label",
          "label": {
            "en": "Hardware version"
          }
        },
        {
          "id": "fv",
          "type": "label",
          "label": {
            "en": "Firmware version"
          }
        }
      ]
    }
  ]
}