{
  "name": {
    "en": "gateBoxPro" 
  },
  "class": "button",
  "capabilities": [
    "button",
    "alarm_contact"
  ],
  "capabilitiesOptions": {
    "alarm_contact": {
      "title": "Gate open alarm"
    }
  },
  "energy": {
    "approximation": {
      "usageOn": 1, 
      "usageOff": 1 
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "discovery": "bbxsrv",
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png"
  },
  "pair": [
    {
      "id": "list_gateboxes",
      "template": "list_devices",
      "navigation": { "next": "add_gateboxes"}
    },
    {
      "id": "add_gateboxes",
      "template": "add_devices"    
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
          "en": "General settings"
      },
      "children":
      [
        {
          "id": "address",
          "type": "text",
          "label": {
            "en": "IP Address"
          }
        },
        {
          "id": "username",
          "type": "text",
          "label": {
            "en": "Username"
          }
        },
        {
          "id": "password",
          "type": "password",
          "label": {
            "en": "Password"
          }
        },
        {
          "id": "poll_interval",
          "type": "number",
          "label": {
            "en": "Poll interval [ms]"
          },
          "attr": {
            "min": 500,
            "max": 60000
          }
        }
      ]
    },
    {
      "type": "group",
      "label": {
          "en": "Device properties"
      },
      "children":
      [
        {
          "id": "product",
          "type": "label",
          "label": {
            "en": "Product name"
          }
        },
        {
          "id": "apiLevel",
          "type": "label",
          "label": {
            "en": "API Level"
          }
        },
        {
          "id": "hv",
          "type": "label",
          "label": {
            "en": "Hardware version"
          }
        },
        {
          "id": "fv",
          "type": "label",
          "label": {
            "en": "Firmware version"
          }
        }
      ]
    }
  ]
}