{
  "name": {
    "en": "pixelBox"
  },
  "class": "light",
  "capabilities": [
    "onoff",
    "dim.brightness",
    "dim.channelR",
    "dim.channelG",
    "dim.channelB",
    "dim.channelW",
    "light_hue",
    "light_saturation",
    "effect_selector"
  ],
  "capabilitiesOptions": {
    "dim.brightness": {
      "title": {
        "en": "RGB Brightness",
        "nl": "RGB Brightness"
      }
    },
    "dim.channelW": {
      "title": {
        "en": "White brightness",
        "nl": "White brightness"
      }
    },
    "dim.channelR": {
      "title": {
        "en": "Channel R",
        "nl": "Channel R"
      }
    },
    "dim.channelG": {
      "title": {
        "en": "Channel G",
        "nl": "Channel G"
      }
    },
    "dim.channelB": {
      "title": {
        "en": "Channel B",
        "nl": "Channel B"
      }
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png"
  },
  "energy": {
    "approximation": {
      "usageOn": 1,
      "usageOff": 1
    }
  },
  "pair": [
    {
      "id": "add_blebox_device",
      "navigation": {
        "next": "list_blebox_devices"
      }
    },
    {
      "id": "list_blebox_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices",
        "prev": "add_blebox_device"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ]
