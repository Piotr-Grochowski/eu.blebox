{
  "name": {
    "en": "humiditySensor"
  },
  "class": "sensor",
  "capabilities": [
    "measure_temperature",
    "measure_humidity",
    "measure_absolute_humidity",
    "measure_dew_point",
    "measure_heat_index"
  ],
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png"
  },
  "energy": {
    "approximation": {
      "usageConstant": 1
    }
  },
  "pair": [
    {
      "id": "add_blebox_device",
      "navigation": {
        "next": "list_blebox_devices"
      }
    },
    {
      "id": "list_blebox_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices",
        "prev": "add_blebox_device"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ]
}
